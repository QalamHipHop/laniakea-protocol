# Laniakea Protocol - Environment Variables Configuration
# نسخه v0.0.01 - Enhanced & Secure

# =============================================================================
# Security & Wallet Configuration (NEW in v0.0.01)
# =============================================================================

# کلید رمزنگاری کیف پول (الزامی برای production)
# یک رشته امن 32 کاراکتری تولید کنید
LANIAKEA_WALLET_KEY=your_secure_wallet_encryption_key_here

# =============================================================================
# AI & Cognitive Core Configuration
# =============================================================================

# کلید API OpenAI برای هسته شناختی (Cognitive Core)
# از https://platform.openai.com/api-keys دریافت کنید
OPENAI_API_KEY=your-openai-key-here

# Cognitive Core Model
# Options: gpt-4.1-mini, gpt-4.1-nano, gemini-2.5-flash
COGNITIVE_MODEL=gpt-4.1-mini

# =============================================================================
# External APIs Configuration (Optional)
# =============================================================================

# NASA API Key
# از https://api.nasa.gov/ دریافت کنید (رایگان)
NASA_API_KEY=DEMO_KEY

# OpenWeather API Key
# از https://openweathermap.org/api دریافت کنید
OPENWEATHER_API_KEY=your-openweather-key-here

# Alpha Vantage API Key (برای داده‌های مالی)
# از https://www.alphavantage.co/support/#api-key دریافت کنید
ALPHAVANTAGE_API_KEY=your-alphavantage-key-here

# Wolfram Alpha App ID
# از https://products.wolframalpha.com/api/ دریافت کنید
WOLFRAM_APP_ID=your-wolfram-app-id-here

# =============================================================================
# Network Configuration
# =============================================================================

# Authority Node
IS_AUTHORITY=true

# Bootstrap Nodes (comma-separated host:port)
# BOOTSTRAP_NODES=localhost:5001,localhost:5002

# پورت P2P
P2P_PORT=5000

# پورت API
API_PORT=8000

# آدرس host
HOST=0.0.0.0

# =============================================================================
# Blockchain Configuration
# =============================================================================

# زمان تولید بلاک (ثانیه)
BLOCK_TIME=60

# حداکثر تعداد تراکنش در هر بلاک
MAX_TRANSACTIONS_PER_BLOCK=100

# =============================================================================
# Token Economics
# =============================================================================

TOKEN_INFLATION_RATE=0.02
TOKEN_BURN_RATE=0.01
STAKING_APY=0.05

# =============================================================================
# Simulation Configuration
# =============================================================================

SIMULATION_ENABLED=false
SIMULATION_SPEED=1.0

# =============================================================================
# Autonomous AI Configuration (NEW in v0.0.01)
# =============================================================================

# فاصله زمانی چرخه تکامل خودکار (ثانیه)
EVOLUTION_CYCLE_INTERVAL=3600

# فعال‌سازی یادگیری خودکار از اینترنت
ENABLE_AUTONOMOUS_LEARNING=true

# حداکثر تعداد API calls در هر چرخه
MAX_API_CALLS_PER_CYCLE=100

# =============================================================================
# Database Configuration (Optional)
# =============================================================================

# PostgreSQL Connection String
# DATABASE_URL=postgresql://user:password@localhost:5432/laniakea

# Redis Connection String (برای caching)
# REDIS_URL=redis://localhost:6379/0

# =============================================================================
# Logging & Monitoring
# =============================================================================

# سطح لاگ (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# مسیر ذخیره لاگ‌ها
LOG_DIR=./logs

# =============================================================================
# Development Mode
# =============================================================================

# حالت توسعه (true/false)
DEV_MODE=true

# فعال‌سازی CORS برای development
ENABLE_CORS=true
