# Laniakea Protocol Environment Configuration
# Copy this file to .env and adjust the values

# ===========================================
# Application Configuration
# ===========================================
NODE_ENV=development
DEBUG=true
HOST=0.0.0.0
PORT=8000
LOG_LEVEL=info

# ===========================================
# Database Configuration
# ===========================================
# PostgreSQL Database
DATABASE_URL=postgresql://laniakea:laniakea123@localhost:5432/laniakea
DB_HOST=localhost
DB_PORT=5432
DB_NAME=laniakea
DB_USER=laniakea
DB_PASSWORD=laniakea123

# Redis Cache
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=redis123

# ===========================================
# Security Configuration
# ===========================================
# JWT Settings
SECRET_KEY=your-super-secret-key-change-this-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Encryption
ENCRYPTION_KEY=your-encryption-key-32-chars-long
HASH_ROUNDS=12

# API Security
API_KEY_HEADER=X-API-Key
RATE_LIMIT_PER_MINUTE=60
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8080"]

# ===========================================
# Blockchain Configuration
# ===========================================
# Consensus
CONSENSUS_MECHANISM=poa
BLOCK_TIME=5000
MIN_STAKE=1000.0
MAX_VALIDATORS=100

# Network
BOOTSTRAP_NODES=["node1.laniakea.io:8000", "node2.laniakea.io:8000"]
NETWORK_ID=laniakea-mainnet
CHAIN_ID=1

# Mining/Staking
MINING_REWARD=10.0
STAKING_REWARD_RATE=0.05
UNBONDING_PERIOD=86400

# ===========================================
# AI/ML Configuration
# ===========================================
# Model Settings
ENABLE_AI_FEATURES=true
MODEL_PATH=./models
MODEL_UPDATE_INTERVAL=3600

# Training
TRAINING_DATA_PATH=./data/training
MODEL_TRAINING_INTERVAL=86400
MAX_TRAINING_SAMPLES=10000

# Evolution
ENABLE_EVOLUTION=true
EVOLUTION_RATE=0.01
MUTATION_RATE=0.1

# ===========================================
# WebSocket Configuration
# ===========================================
WEBSOCKET_ENABLED=true
WEBSOCKET_PORT=8001
MAX_CONNECTIONS=1000
HEARTBEAT_INTERVAL=30

# ===========================================
# Monitoring Configuration
# ===========================================
# Metrics
METRICS_ENABLED=true
METRICS_PORT=9090
METRICS_PATH=/metrics

# Health Checks
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=10

# Logging
LOG_FILE=./logs/laniakea.log
LOG_MAX_SIZE=100MB
LOG_BACKUP_COUNT=5
LOG_FORMAT=json

# ===========================================
# Performance Configuration
# ===========================================
# Connection Pooling
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=30
REDIS_POOL_SIZE=10

# Caching
CACHE_TTL=300
CACHE_MAX_SIZE=1000

# Rate Limiting
RATE_LIMIT_STORAGE=redis
RATE_LIMIT_STRATEGY=sliding-window

# ===========================================
# Storage Configuration
# ===========================================
# File Storage
STORAGE_TYPE=local
STORAGE_PATH=./data
MAX_FILE_SIZE=100MB

# Backup
BACKUP_ENABLED=true
BACKUP_INTERVAL=86400
BACKUP_RETENTION_DAYS=30
BACKUP_PATH=./backups

# ===========================================
# Development Configuration
# ===========================================
# Testing
TEST_DATABASE_URL=sqlite:///./test.db
TEST_REDIS_URL=redis://localhost:6379/1

# Debug
ENABLE_PROFILER=false
ENABLE_DEBUG_TOOLBAR=false

# ===========================================
# Production Configuration
# ===========================================
# SSL/TLS
SSL_ENABLED=false
SSL_CERT_PATH=./ssl/cert.pem
SSL_KEY_PATH=./ssl/key.pem

# Workers
WORKER_COUNT=4
WORKER_TIMEOUT=30

# Load Balancing
LOAD_BALANCER_ENABLED=false
LOAD_BALANCER_ALGORITHM=round-robin

# ===========================================
# Third-party Services
# ===========================================
# Email
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Notifications
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/YOUR/DISCORD/WEBHOOK

# Analytics
GOOGLE_ANALYTICS_ID=GA-XXXXXXXX-X
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# ===========================================
# Feature Flags
# ===========================================
ENABLE_FEATURE_ANALYTICS=true
ENABLE_FEATURE_DASHBOARD=true
ENABLE_FEATURE_API_DOCS=true
ENABLE_FEATURE_GRAPHQL=false
ENABLE_FEATURE_GRPC=false
ENABLE_FEATURE_IPFS=false
ENABLE_FEATURE_CROSS_CHAIN=true

# ===========================================
# Experimental Features
# ===========================================
EXPERIMENTAL_QUANTUM_COMPUTING=false
EXPERIMENTAL_ZERO_KNOWLEDGE_PROOFS=false
EXPERIMENTAL_FEDERATED_LEARNING=false
EXPERIMENTAL_HOMOMORPHIC_ENCRYPTION=false

# ===========================================
# Environment-specific Overrides
# ===========================================
# Development
DEVELOPMENT_AUTO_RELOAD=true
DEVELOPMENT_MOCK_EXTERNAL_SERVICES=false

# Staging
STAGING_DEBUG=false
STAGING_LOG_LEVEL=warning

# Production
PRODUCTION_DEBUG=false
PRODUCTION_LOG_LEVEL=error
PRODUCTION_MONITORING_ENABLED=true