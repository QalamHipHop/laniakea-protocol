# Laniakea Protocol v0.0.01 Enhanced - Environment Configuration
# کپی این فایل به .env و مقادیر را بر اساس نیاز تغییر دهید

# =============================================================================
# CONFIGURAÇÃO BÁSICA
# =============================================================================

# Node Configuration
NODE_ID=laniakea-node-001
NODE_NAME=Laniakea Node v0.0.01
HOST=0.0.0.0
PORT=8000

# Environment
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# JWT Configuration
JWT_SECRET_KEY=your-super-secret-jwt-key-change-this-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=1440

# Encryption Key (32 bytes for Fernet)
LANIAKEA_LOG_KEY=your-32-byte-encryption-key-here-change-me

# Security Level (LOW, MEDIUM, HIGH, CRITICAL)
SECURITY_LEVEL=HIGH

# Rate Limiting
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_PER_HOUR=1000
RATE_LIMIT_PER_DAY=10000

# Session Configuration
SESSION_TIMEOUT=3600
MAX_LOGIN_ATTEMPTS=5
LOGIN_ATTEMPT_TIMEOUT=900

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# Database Type (sqlite, postgresql, mysql)
DATABASE_TYPE=sqlite

# SQLite Configuration
SQLITE_DATABASE_PATH=./data/laniakea.db

# PostgreSQL Configuration
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=laniakea
POSTGRES_USER=laniakea_user
POSTGRES_PASSWORD=secure_postgres_password

# =============================================================================
# BLOCKCHAIN CONFIGURATION
# =============================================================================

# Blockchain Settings
BLOCK_TIME=300
MAX_BLOCK_SIZE=1000000
DIFFICULTY_ADJUSTMENT_PERIOD=100

# Proof of Value (PoV) Configuration
POV_ENABLED=true
POV_VALIDATOR_COUNT=21
POV_MIN_VALIDATORS=7

# =============================================================================
# AI CONFIGURATION
# =============================================================================

# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=4000

# AI System Configuration
AI_ENABLED=true
AI_LEARNING_RATE=0.001
AI_MAX_MEMORY_GB=8

# =============================================================================
# API INTEGRATION CONFIGURATION
# =============================================================================

# NASA API
NASA_API_KEY=your-nasa-api-key

# GitHub API
GITHUB_API_TOKEN=your-github-token

# =============================================================================
# MONITORING CONFIGURATION
# =============================================================================

# Prometheus Metrics
METRICS_ENABLED=true
METRICS_PORT=9090

# Health Check Configuration
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_INTERVAL=30

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================

# Log Settings
LOG_DIR=./logs
LOG_FILE_MAX_SIZE=10485760
LOG_FILE_BACKUP_COUNT=5

# =============================================================================
# WARNING: SECURITY NOTES
# =============================================================================
# 1. Change all default passwords and secret keys in production
# 2. Use environment variables for sensitive data
# 3. Enable SSL/TLS in production
# 4. Regularly rotate encryption keys
# 5. Monitor logs for suspicious activities