# Laniakea Protocol - Environment Configuration

# Authority Node
IS_AUTHORITY=true

# OpenAI API Key (automatically configured)
OPENAI_API_KEY=dummy-key-for-testing

# Cognitive Core Model
COGNITIVE_MODEL=gpt-4.1-mini

# Simulation
SIMULATION_ENABLED=true
SIMULATION_SPEED=1.0

# Token Economics
TOKEN_INFLATION_RATE=0.02
TOKEN_BURN_RATE=0.01
STAKING_APY=0.05

# Database Configuration
POSTGRES_USER=laniakea_user
POSTGRES_PASSWORD=laniakea_password
POSTGRES_DB=laniakea_db
DATABASE_URL=postgresql+psycopg2://laniakea_user:laniakea_password@db:5432/laniakea_db

# Security Configuration
SECRET_KEY="your-super-secret-key-for-jwt"
ALGORITHM="HS256"
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Monitoring Configuration
GRAFANA_USER=admin
GRAFANA_PASSWORD=admin
